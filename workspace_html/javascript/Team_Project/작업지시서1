<script>
    function deleteSelectedRows() {
        let checkboxes = document.querySelectorAll('.delete-checkbox');
        checkboxes.forEach(checkbox => {
            if (checkbox.checked) {
                checkbox.closest('.row').remove();
            }
        });
    }

    function searchTable() { // 돋보기 버튼을 클릭했을 때 동작하는 함수
        let selectValue = document.querySelector('#select').value;
        let searchText = document.querySelector('#searchText').value;
        console.log(selectValue)
        console.log(searchText)
        let table = document.querySelector('.table');
        let rows = table.querySelectorAll('.tbody tr'); // 행
        if (selectValue === 'orderNo') {
            rows.forEach(row => {
                let orderNo = row.querySelector('td:nth-child(2)');
                if (orderNo) {
                    let codeText = orderNo.innerText;
                    if (codeText.includes(searchText)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                }
            });
        } else if (selectValue === 'item') {
            rows.forEach(row => {
                let name = row.querySelector('td:nth-child(6)');
                if (name) {
                    let nameText = name.innerText;
                    if (nameText.includes(searchText)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                }
            });
        } else if (selectValue === '-----') {
            rows.forEach(row => {
                row.style.display = '';
            })
        }

    }

    function regOrder() {
        window.location.href = "orderReg.html"
    }

    window.onload = function () {
        let tbody = document.querySelector('.tbody');

        //세션스토리지에 있는 order아이템 배열 가져오기
        let order_items = JSON.parse(sessionStorage.getItem('order_items')) || [];

        let newRow = document.createElement('tr');
        order_items.forEach(item => {
            if (item.startDate && item.endDate && item.content) {
                let newRow = document.createElement('tr');
                newRow.innerHTML = `
                    <td><input type="checkbox" class="delete-checkbox"></td>
                    <td>${item.regNo}</td>
                    <td>${item.regDate}</td>
                    <td>${item.startDate}</td>
                    <td>${item.endDate}</td>
                    <td>${item.content}</td>
                    <td>${item.count}</td>
                    <td>미완료</td>
                    `;


                tbody.appendChild(newRow);
            }
        });
    }

</script>