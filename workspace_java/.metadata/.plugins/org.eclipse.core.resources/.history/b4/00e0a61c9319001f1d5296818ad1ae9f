package sec01.exam01;

public class 연산자Exam {

	public static void main(String[] args) {

		int a = 10;
		a = 11;
		a = 10 + 1;
		int b = a + 1;
		// a = 11 +1
		a = a + 1;   //a = 1 + a
		a += 1 ;	// a = a + 1와 같다
		a++; 		// a += 1와 같다
		++a;

		a = 10;
		a++;
		System.out.println("a  :"+ a);
		
		a = a - 2;
		a -= 2;
		a -= 1;
		a--; 		// a = a-1과 같다
		--a;
		
		a = 10;
		a--;
		System.out.println("a  :"+ a);
		//현재 a가 9
		System.out.println("++a :"+ ++a); // 출력 10
		System.out.println("++a :"+ a++); // 출력 10
		System.out.println("a :"+ a); // 출력 11
	}

}
